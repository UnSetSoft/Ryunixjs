{
  "root": true,
  "parser": "@babel/eslint-parser",
  "plugins": ["import"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "requireConfigFile": false,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "babelOptions": {
      "presets": ["@babel/preset-react"],
      "caller": {
        "supportsTopLevelAwait": true
      }
    }
  }
}
